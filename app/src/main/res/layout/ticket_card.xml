<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardBackgroundColor="@color/cityblue"
    card_view:cardUseCompatPadding="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/ticketName"
            android:textSize="17sp"
            android:fontFamily="@font/ossemibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:textColor="@color/white"
            />

        <View
            android:layout_row="1"
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/ticketTime"
            android:textSize="15sp"
            android:fontFamily="@font/osregular"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            />

        <TextView
            android:id="@+id/ticketLocation"
            android:textSize="15sp"
            android:fontFamily="@font/osregular"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            />

        <TextView
            android:id="@+id/ticketPrice"
            android:textSize="15sp"
            android:fontFamily="@font/osregular"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            />

        <Button
            android:id="@+id/buttonBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:backgroundTint="@color/white"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Buy"
            android:textColor="@color/cityblue"
            android:textSize="10sp" />

    </GridLayout>

</androidx.cardview.widget.CardView>